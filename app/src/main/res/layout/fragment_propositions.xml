<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.proposition.PropositionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="My propositions"
                android:textAlignment="textStart"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_upload_file"
                android:backgroundTint="#59E4E4E4"
                android:elevation="60dp">

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Date : "
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/propositionCreationDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_toEndOf="@+id/textView17"
                    android:text="DD/MM/YYYY"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_below="@+id/textView17"
                    android:text="Products : "
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/propositionProducts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_below="@+id/propositionCreationDate"
                    android:layout_toEndOf="@+id/textView18"
                    android:text="product 1, product 2, product 3"
                    android:textSize="12sp" />


                <com.google.android.material.chip.Chip
                    android:id="@+id/is_active"
                    android:layout_width="100dp"
                    android:layout_height="34dp"
                    android:layout_below="@+id/textView18"
                    android:layout_alignParentStart="true"
                    android:layout_margin="5dp"
                    android:backgroundTint="#4CAF50"
                    android:text="Is active"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#FFFFFF"
                    android:textSize="9sp" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_upload_file"
                android:backgroundTint="#59E4E4E4"
                android:elevation="60dp">

                <TextView
                    android:id="@+id/textView170"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Date : "
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/propositionCreationDate0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_toEndOf="@+id/textView170"
                    android:text="DD/MM/YYYY"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView180"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_below="@+id/textView170"
                    android:text="Products : "
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/propositionProducts0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_below="@+id/propositionCreationDate0"
                    android:layout_toEndOf="@+id/textView180"
                    android:text="product 1, product 2, product 3"
                    android:textSize="12sp" />


                <com.google.android.material.chip.Chip
                    android:id="@+id/is_active0"
                    android:layout_width="100dp"
                    android:layout_height="34dp"
                    android:layout_below="@+id/textView180"
                    android:layout_alignParentStart="true"
                    android:layout_margin="5dp"
                    android:backgroundTint="#F44336"
                    android:text="In exchange"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#EFF5F6"
                    android:textSize="9sp" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_upload_file"
                android:backgroundTint="#59E4E4E4"
                android:elevation="60dp">

                <TextView
                    android:id="@+id/textView1700"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Date : "
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/propositionCreationDate00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_toEndOf="@+id/textView1700"
                    android:text="DD/MM/YYYY"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView1800"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_below="@+id/textView1700"
                    android:text="Products : "
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/propositionProducts00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_below="@+id/propositionCreationDate00"
                    android:layout_toEndOf="@+id/textView1800"
                    android:text="product 1, product 2"
                    android:textSize="12sp" />


                <com.google.android.material.chip.Chip
                    android:id="@+id/is_active00"
                    android:layout_width="100dp"
                    android:layout_height="34dp"
                    android:layout_below="@+id/textView1800"
                    android:layout_alignParentStart="true"
                    android:layout_margin="5dp"
                    android:backgroundTint="#F44336"
                    android:text="In exchange"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#EFF5F6"
                    android:textSize="9sp" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>