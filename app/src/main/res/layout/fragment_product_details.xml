<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.product.ProductDetailsFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/buttonUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="200dp"
                    android:layout_weight="1"
                    android:backgroundTint="#2196F3"
                    android:text="Update" />

                <Button
                    android:id="@+id/buttonDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/buttonUpdate"
                    android:layout_weight="1"
                    android:backgroundTint="#ED291B"
                    android:text="Delete" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/productImage"
                    android:layout_width="wrap_content"
                    android:layout_height="161dp"
                    android:src="@drawable/img3" />

                <TextView
                    android:id="@+id/textProductName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/productImage"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="10dp"
                    android:text="Product name : "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/productName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/productImage"
                    android:layout_toEndOf="@+id/textProductName"
                    android:text="Product 1"/>

                <TextView
                    android:id="@+id/textCategories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textProductName"
                    android:layout_margin="2dp"
                    android:text="Categories : "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/productCategories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_below="@+id/productName"
                    android:layout_toEndOf="@+id/textCategories"
                    android:text="Technology, Sport"/>

                <TextView
                    android:id="@+id/textOwner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textCategories"
                    android:layout_margin="2dp"
                    android:text="Owner : "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/productOwner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_below="@+id/productCategories"
                    android:layout_toEndOf="@+id/textOwner"
                    android:text="Jean Aime"/>

                <TextView
                    android:id="@+id/textDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textOwner"
                    android:layout_margin="2dp"
                    android:text="Description : "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/productDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_below="@+id/productOwner"
                    android:layout_toEndOf="@+id/textDescription"
                    android:text="@string/large_text"/>

                <TextView
                    android:id="@+id/textFirstOwner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/productDescription"
                    android:layout_margin="2dp"
                    android:text="First owner : "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/productFirstOwner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_below="@+id/productDescription"
                    android:layout_toEndOf="@+id/textFirstOwner"
                    android:text="Rolland"/>
                
                <TextView
                    android:id="@+id/textCreationdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/productFirstOwner"
                    android:layout_margin="2dp"
                    android:text="Created at : "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/productCreationDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_below="@+id/productFirstOwner"
                    android:layout_toEndOf="@+id/textCreationdate"
                    android:text="DD/MM/YYYY"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_home"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="2dp"
                        android:text="Jean Aime's exchangeable products"
                        android:textAlignment="textStart"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <CheckBox
                            android:id="@+id/productOne"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Product 1 - Laptop" />

                        <CheckBox
                            android:id="@+id/productTwo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/productOne"
                            android:text="Product 2 - Shirt" />

                        <CheckBox
                            android:id="@+id/product3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/productTwo"
                            android:text="Product 3 - Food" />
                        <CheckBox
                            android:id="@+id/product4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/product3"
                            android:text="Product 4 - Laptop" />

                        <Button
                            android:id="@+id/buttonSaveExchange"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/product4"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:text="Propose" />



                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>