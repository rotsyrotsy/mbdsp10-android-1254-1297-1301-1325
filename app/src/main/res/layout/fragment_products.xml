<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.product.ProductFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="My products"
                android:textAlignment="textStart"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:background="@drawable/rounded_upload_file"
                    android:backgroundTint="#59E4E4E4"
                    android:elevation="60dp">

                    <ImageButton
                        android:id="@+id/imageButton"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="0dp"
                        android:backgroundTint="#3F51B5"
                        android:src="@android:drawable/ic_menu_view" />

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="match_parent"
                        android:layout_height="93dp"
                        android:layout_below="@+id/imageButton"
                        android:layout_marginTop="5dp"
                        tools:src="@drawable/img3" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageView7"
                        android:layout_marginTop="5dp"
                        android:text="Label : "
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/productName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageView7"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@+id/textView7"
                        android:text="Product Name"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView7"
                        android:layout_marginTop="5dp"
                        android:text="Date : "
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/productCreationDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView7"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@+id/textView17"
                        android:text="DD/MM/YYYY"
                        android:textSize="12sp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/isExchangeable"
                        android:layout_width="wrap_content"
                        android:layout_height="34dp"
                        android:layout_below="@+id/textView17"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:backgroundTint="#4CAF50"
                        android:text="Is exchangeable"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textSize="9sp" />


                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:background="@drawable/rounded_upload_file"
                    android:backgroundTint="#59E4E4E4"
                    android:elevation="60dp">

                    <ImageButton
                        android:id="@+id/imageButton2"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="0dp"
                        android:backgroundTint="#3F51B5"
                        android:src="@android:drawable/ic_menu_view" />

                    <ImageView
                        android:id="@+id/imageView72"
                        android:layout_width="match_parent"
                        android:layout_height="93dp"
                        android:layout_below="@+id/imageButton2"
                        android:layout_marginTop="5dp"
                        tools:src="@tools:sample/backgrounds/scenic" />

                    <TextView
                        android:id="@+id/textView72"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageView72"
                        android:layout_marginTop="5dp"
                        android:text="Label : "
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/productName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageView72"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@+id/textView72"
                        android:text="Product Name"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textView172"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView72"
                        android:layout_marginTop="5dp"
                        android:text="Date : "
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/productCreationDate2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView72"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@+id/textView172"
                        android:text="DD/MM/YYYY"
                        android:textSize="12sp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/isExchangeable2"
                        android:layout_width="wrap_content"
                        android:layout_height="34dp"
                        android:layout_below="@+id/textView172"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:backgroundTint="#4CAF50"
                        android:text="Is exchangeable"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textSize="9sp" />


                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:background="@drawable/rounded_upload_file"
                    android:backgroundTint="#59E4E4E4"
                    android:elevation="60dp">

                    <ImageButton
                        android:id="@+id/imageButton23"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="0dp"
                        android:backgroundTint="#3F51B5"
                        android:src="@android:drawable/ic_menu_view" />

                    <ImageView
                        android:id="@+id/imageView723"
                        android:layout_width="match_parent"
                        android:layout_height="93dp"
                        android:layout_below="@+id/imageButton23"
                        android:layout_marginTop="5dp"
                        tools:src="@tools:sample/backgrounds/scenic" />

                    <TextView
                        android:id="@+id/textView723"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageView723"
                        android:layout_marginTop="5dp"
                        android:text="Label : "
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/productName233"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageView723"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@+id/textView723"
                        android:text="Product Name"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textView1723"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView723"
                        android:layout_marginTop="5dp"
                        android:text="Date : "
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/productCreationDate23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView723"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@+id/textView1723"
                        android:text="DD/MM/YYYY"
                        android:textSize="12sp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/isExchangeable23"
                        android:layout_width="wrap_content"
                        android:layout_height="34dp"
                        android:layout_below="@+id/textView1723"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:backgroundTint="#4CAF50"
                        android:text="Is exchangeable"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textSize="9sp" />


                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/AddProposition"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="Add to a proposition"
                android:textAllCaps="true" />

        </LinearLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView >