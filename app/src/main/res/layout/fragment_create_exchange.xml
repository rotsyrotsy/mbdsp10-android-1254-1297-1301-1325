<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.exchange.CreateExchangeFragment"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose products to exchange"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_margin="10dp"/>

    <GridLayout
        android:id="@+id/userProductList"
        android:layout_width= "match_parent"
        android:layout_height= "wrap_content"
        android:layout_below="@+id/textView"
        android:columnCount="1">
        <CheckBox
            android:id="@+id/productOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product 1" />

        <CheckBox
            android:id="@+id/productTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/productOne"
            android:text="Product 2" />

    </GridLayout>


    <EditText
        android:id="@+id/deliveryAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:layout_marginStart="5dp"
        android:layout_below="@+id/userProductList"
        android:hint="Delivery Address" />

    <Button
        android:id="@+id/buttonSaveExchange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deliveryAddress"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#4CAF50"
        android:text="Save" />


</RelativeLayout>